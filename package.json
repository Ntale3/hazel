{
	"name": "hazel-chat",
	"private": true,
	"packageManager": "bun@1.3.5",
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*",
			"experimental/*",
			"libs/*"
		],
		"catalogs": {
			"effect": {
				"effect": "^3.19.12",
				"@effect/platform": "0.93.8",
				"@effect/platform-bun": "0.86.0",
				"@effect/platform-browser": "0.73.0",
				"@effect/platform-node": "0.103.0",
				"@effect/rpc": "0.72.2",
				"@effect/experimental": "^0.57.11",
				"@effect/language-service": "^0.62.4",
				"@effect/sql": "0.48.6",
				"@effect/sql-pg": "0.49.7",
				"@effect/cluster": "^0.55.0",
				"@effect/opentelemetry": "0.59.3",
				"@effect/workflow": "0.15.2",
				"@effect-atom/atom": "0.4.11",
				"@effect-atom/atom-react": "0.4.4"
			}
		}
	},
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build typecheck",
		"start": "turbo start",
		"setup": "turbo setup",
		"typecheck": "turbo build typecheck",
		"format:fix": "biome check --write --unsafe",
		"test": "vitest",
		"test:once": "vitest run",
		"test:debug": "vitest --inspect-brk --no-file-parallelism",
		"test:coverage": "vitest run --coverage --coverage.reporter=text"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.10",
		"@vitest/coverage-v8": "^4.0.16",
		"turbo": "^2.6.3",
		"typescript": "^5.9.3",
		"vitest": "^4.0.16",
		"wrangler": "^4.55.0"
	},
	"trustedDependencies": []
}